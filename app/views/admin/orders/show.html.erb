<div class="container">
  <div class="row">
    <div class="col-6">
      <table class="table table-borderless">
        <tr>
          <th>購入者</th>
          <td><%= @order.name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y年%m月%d日") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postal_code %>
              <%= @order.address %></br>
              <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td><%= select :status, Order.statuses.keys %></td>
        </tr>

      </table>
    </div>
  </div>
</div>