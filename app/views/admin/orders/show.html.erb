<div class="container">
  <div class="row">
    <div class="col-6">
      <table class="table table-borderless">
        <tr>
          <th>購入者</th>
          <td><%= @order.name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y年%m月%d日") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postal_code %>
              <%= @order.address %></br>
              <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <%= form_with model: @order,url: admin_order_path, local: true do |f| %>
        <tr>
          <th>注文ステータス</th>
          <td><%= f.select :status, Order.statuses.keys %>
              <%= f.submit "更新",class:"btn btn-success" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-borderless">
        <thead class="thead-dark">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.item.name %></td>
            <td><%= order.tax_price %></td>
            <td><%= order.amount %></td>
            <td><%= order.tax_price * order.amount %></td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>