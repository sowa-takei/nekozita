<div class="container">
  <h4>商品編集</h4>
  <div class="row">
    <div class="col-10">
      <%= form_with model: @item,url:admin_item_path(@item),local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>商品画像</th>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= f.text_field :name,:size=>"40"  %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :introduction,:size=>"45x5" %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= f.collection_select(:genre_id, @genres, :id, :name) %>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><%= f.radio_button :is_active, 'true' %>
              <%= f.label :is_active, '販売中', value: true %>
              <%= f.radio_button :is_active, 'false' %>
              <%= f.label :is_active, '在庫切れ', value: false %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "変更を保存",class:"btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>