<div class="container">
  <h4>ジャンル一覧　追加</h4>
  <div class="row">
    <div class="col-6">
      <%= form_with model: @genres,url:admin_genres_path(@genre),local:true do |f| %>
      <table>
        <tr>
          <th>ジャンル名</th>
          <td><%= f.text_field :name %>
              <%= f.submit "新規登録",class:"btn btn-success" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row.mb-5">
    <div class="col-6">
      <table class="table">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する",edit_admin_genre_path(genre),class:"btn btn-success" %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
