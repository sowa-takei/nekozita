<table class="table">
 <tr>
  <th><h2>商品一覧</h2></th>
  <th style=text-align:"right"><%= link_to "+",new_admin_product_path, class: "btn btn-outline-secondary" %></th>
 </tr>
</table>
<table class="table">
 <thead class="thead-light">
  <tr>
   <th>商品ID</th>
   <th>商品名</th>
   <th>税抜価格</th>
   <th>ジャンル</th>
   <th>ステータス</th>
  </tr>
 </thead>
 <tbody>
 <% @products.each do |product| %>
 <tr>
  <td><%= product.id %></td>
  <td><%= link_to  admin_product_path(product) do %>
      <%= product.name %><% end %>
  </td>
  <td><%= converting_to_jpy(product.price) %></td>
  <td><%= product.genre.name %></td>
  <td><label for="product_is_activ"></label>
  <% if product.is_active == true %>
  <span style="color: green">販売中</span>
  <% else %>
  <span style="color: gray">販売停止中</span>
  <% end %>
  </td>
 </tr>
 <% end %>
</table>


<%#= paginate @products %>
