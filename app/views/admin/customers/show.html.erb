<div class="container">
  <div class="row">
    <div class="col-8">
      <%= @customer.last_name +  @customer.first_name %>の会員詳細
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>
              <%= @customer.first_name %>
          </td>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.last_name_kana %>
                <%= @customer.first_name_kana %>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>性別</th>
          <td><% if @customer.gender == true %>
              <span style="color: blue">男性</span>
              <% else %>
              <span style="color: red">女性</span>
              <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "編集",edit_admin_customer_path(@customer),class:"btn btn-success" %>
              <%= link_to "注文履歴一覧",admin_path,class:"btn btn-danger" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>