<div class="container">
  <h4>会員一覧</h4>
  <div class"row">
    <div class="col-10">
      <table class="table table-borderless">
        <thead class="thead-dark">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to admin_customer_path(customer) do %>
                <%= customer.last_name+customer.first_name %>
                <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><% if customer.is_active == true %>
                <span style="color: green">有効</span>
                <% else %>
                <span style="color: red">退会</span>
                <% end %></td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>