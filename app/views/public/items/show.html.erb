    <div class="col-2">
      <table>
        <tr>
         <th>BRAND</th>
        </tr>
        <tr>
          <td>nekozita</td>
        </tr>
      </table>
    </div>
    <div class="col-4">
      <%= attachment_image_tag @item, :image, :fill,300,300 %>
    </div>
    <div class="col-6">
      <%#= form_with model: @item, local: true do |f| %>
     <%= @item.name %></br>
