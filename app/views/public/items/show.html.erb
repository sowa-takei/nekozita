      <%= form_with model: @cart_item,url:cart_items_path(@cart_item), local: true do |f| %>
      <%= attachment_image_tag @item, :image, :fill,300,300 %>
    </div>
    <div class="col-6">
      <%#= form_with model: @item, local: true do |f| %>

       <%= @item.name %></br>
       <%= f.hidden_field :item_id, :value => @item.id %>
