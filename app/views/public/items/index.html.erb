<div class="container">
  <div class="row">
    <%= render 'public/homes/BRAND', items: @items %>
    <div class="col-10">

    　<h4>新着商品</h4>
    　<div class="row mx-auto mt-3">
    　<% if @search_items %>
        <%# render partial: 'items/item', collection: @search_items %>
        <% @search_items.each do |item| %>
          <div class="mx-auto">
           <%= link_to item_path(item) do %>
             <%= attachment_image_tag item, :image, :fill,200,200 %></br>
             <div class="row mt-3">
               <%= item.name %></br>
             </div>
             <div class="row mt-1">
              ￥<%= item.price %>
             </div>
           <% end %>
          </div>
        <% end %>
      <% else %>
      <% @items.each do |item| %>
       <div class="mx-auto">
       <%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :image, :fill,100,100 %></br>
       <div class="row mt-3">
        <%= item.name %></br>
       </div>
       <div class="row mt-1">
        ￥<%= item.price %>
       </div>
       <% end %>
     </div>
    <% end %>
   <% end %>
   </div>
  </div>
 </div>
</div>
