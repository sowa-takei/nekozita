<div class="container">
   <h2 class="sample" style="text-align:center;">お問い合わせ画面</h2>
  <div class="row">
    <div class="col-10">

      <%= form_with model: @contact, url: confirm_path, local: true do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>お名前</th>
          <td><%= f.text_field :name, autofocus: true, class: 'form-control' %></td>
        </tr>
        <tr>
          <th>問い合わせ内容</th>
          <td><%= f.text_area :message, size: '10x10', class: 'form-control' %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit '入力内容確認' %></td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
</div>
