<div class="container" style="min-height: 400px;">
  <div class="row">
    <div class="col-12">
      <table class="table table-bordered">
         <thead class="thead-dark">
         <!-- <tr>-->
         <!--   <th>注文日</th>-->
         <!-- <th>配送先</th>-->
         <!-- <th>注文商品</th>-->
         <!--  <th>支払金額</th>-->
         <!--   <th>ステータス</th>-->
         <!-- <th>注文詳細</th>-->
         <!--</tr>-->
           <% @orders.each do |order| %>
           <tr class="row">
             <td class="col-md-2 col-12"><%= order.created_at.strftime('%Y/%m/%d') %></td>
             <td class="col-md-2 col-12">〒<%= order.postal_code %></br>
                 <%= order.address %></br>
                 <%= order.name %>
             </td>
             <td class="col-md-2 col-12"><% order.order_details.each do |order_detail| %>
                 <%= order_detail.item.name %></br>
             <% end %>
             </td>
             <td class="col-md-2 col-12"><%= order.total_payment %></td>
             <td class="col-md-2 col-12"><%= order.status %></td>
             <td class="col-md-2 col-12"><%= link_to "詳細情報",order_path(order),class:"btn btn-primary" %></td>
           </tr>
           <% end %>
         </thead>
      </table>
    </div>
  </div>
</div>