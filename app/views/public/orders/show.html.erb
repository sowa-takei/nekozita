<div class="container">
  <h4>注文履歴詳細</h4>
  <div class="row">
    <div class="col-md-9 col-12">
      <h4 class="font-weight-bold">注文情報</h4>
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>〒<%= @order.postal_code %></br>
                <%= @order.address %></br>
                <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status %></td>
          </tr>
        </thead>
      </table>
    </div>
   </div>
   <div class="row">
    <div class="col-md-9 col-12">
    <h4 class="font-weight-bold">請求情報</h4>
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>商品金額</th>
            <td><%= @order.total_payment - shipping_cost %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= shipping_cost %></td>
          </tr>
          <tr>
            <th>ご請求金額</th>
            <td><%= @order.total_payment %></td>
          </tr>
        </thead>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-10">
      <h4 class="font-weight-bold">注文内容</h4>
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.item.name %></td>
            <td><%= order.tax_price %></td>
            <td><%= order.amount %></td>
            <td><%= order.tax_price * order.amount %></td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>