<div class="container">
  <h4>注文情報確認</h4>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item, :image, :fill,200,100 %>
                <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
          </tr>
        </table>
    </div>
    <div class="col-4">
       <table class="table table-bordered">
         <thead class="thead-dark">
           <tr>
             <th>送料</th>
             <td><%= shipping_cost %></td>
           </tr>
         </thead>
       </table>
       <% end %>
    </div>
  </div>
</div>