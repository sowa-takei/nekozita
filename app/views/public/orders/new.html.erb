<div class="container">
  <h4>注文情報入力</h4>
  <div class="row">
    <%= form_with model: @order,url: orders_verification_path, local: true do |f| %>
    <div class="col-12">
      <h4 class="font-weight-bold">支払方法</h4>
      <%= f.radio_button :payment_method, 0 %>クレジットカード</br>
      <%= f.radio_button :payment_method, 1 %>銀行振込
      <h4 class="font-weight-bold">お届け先</h4>
      <%= radio_button_tag :delivery, 0 %>ご自身の住所</br>
      〒<%= current_customer.postal_code %>
      <%= current_customer.address %></br>
      <%= current_customer.last_name + current_customer.first_name %></br>
      <%= radio_button_tag :delivery, 1 %>>登録済住所から選択</br>
      <%= radio_button_tag :delivery, 3 %>新しいお届け先</br>
      <table>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td><%= f.text_field :postal_code,placeholder: "0000000" %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address,:size=>"60",placeholder: "東京都中央区銀座6丁目10-1" %></td>
        </tr>
        <tr>
          <th>宛名</th>
          <td><%= f.text_field :name,placeholder: "令和太郎" %></td>
        </tr>
      </table>
    </div>
   </div>
   <div class="row">
    <div class="col-5">
    </div>
    <div class="col-5">
      <%= f.submit "確認画面へ進む",class:"btn btn-primary" %>
    </div>
    </div>

    <% end %>

</div>