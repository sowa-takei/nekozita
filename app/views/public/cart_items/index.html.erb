<div class="container" style="min-height: 500px;">
  <div class="row mt-5">

    <div class="col-xs-2 col-md-8">
      <h4>ショッピングカート</h4>
    </div>
    <div class="col-xs-5 col-md-4">
      <%= link_to "カートを空にする", cart_item_path(@cart_items), method: :delete,class: "btn btn-danger" %>
    </div>
  </div>

  <div class="col-xs-12 col-md-12">
    <div class="row mt-5">
      <table class="table table-bordered">
         <thead class="thead-dark">
           <!--<tr>-->
           <!--  <th>商品名</th>-->
           <!--  <th>単価(税込)</th>-->
           <!--  <th>数量</th>-->
           <!--  <th>小計</th>-->
           <!--  <th></th>-->
           <!--</tr>-->
           <% @sum = 0 %>
           <% @cart_items.each do |cart_item| %>
           <tr class="row">
             <td class="col-md-6 col-12">
             　 　<%= attachment_image_tag cart_item.item, :image, :fill,100,50 %>
                 <%= cart_item.item.name %>
             </td>
             <td class="col-md-1 col-3"><%= cart_item.item.with_tax_price %>円(税込)</td>
             <td class="col-md-2 col-3"><%= form_with model:cart_item, url:cart_item_path(cart_item),local: true do |f| %>
                  <%= f.select :amount,*[1..20] %>
                  <%= f.submit "変更する",class:"btn-sm btn-success" %>
                 <% end %>
             </td>
             <td class="col-md-1 col-3"><%= cart_item.subtotal %>円(小計)</td>
             <% @sum += cart_item.subtotal %>
             <td class="col-md-2 col-3"><%= link_to "削除する",delete_cart_item_path(cart_item),method: :delete, class:"btn btn-danger" %></td>
           </tr>
           <% end %>
         </thead>
      </table>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-7">
      <%= link_to "買い物を続ける",items_path,class:"btn btn-primary" %>
    </div>
    <div class="col-xs-3 col-md-4">
      <table class="table table-bordered">
        <thead class="thead-dark">
        <tr>
          <th>合計金額</th>
          <td><%= @sum  %>円</td>
        </tr>
        </thead>
      </table>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-6">
    </div>
    <div class="col-6">
     <%= link_to "情報入力に進む",new_order_path(@order),class:"btn btn-success" %>
    </div>
  </div>
</div>