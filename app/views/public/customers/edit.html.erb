<div class="container">
  <h4>会員情報編集</h4>
  <div class="row">
    <div class="col-10">
      <%= form_with model: @customer, url:customers_path(@customer), local:true do |f| %>
      <div class="form-row">
        <div class="form-group col-xs-12 col-md-5">
          <%= f.label :名字 %>
          <%= f.text_field :last_name,class: :"form-control" %>
        </div>
        <div class="form-group col-xs-12 col-md-5">
          <%= f.label :名前 %>
          <%= f.text_field :first_name,class: :"form-control" %>
        </div>
         <div class="form-group col-xs-12 col-md-5">
          <%= f.label :名字 %>(カナ)
          <%= f.text_field :last_name_kana,class: :"form-control" %>
        </div>
        <div class="form-group col-xs-12 col-md-5">
          <%= f.label :名前 %>(カナ)
          <%= f.text_field :first_name_kana,class: :"form-control" %>
        </div>
        <div class="form-group col-xs-12 col-md-8">
          <%= f.label :郵便番号 %>
          <%= f.text_field :postal_code,class: :"form-control" %>
        </div>
        <div class="form-group col-xs-12 col-md-8">
          <%= f.label :住所 %>
          <%= f.text_field :address,class: :"form-control" %>
        </div>
        <div class="form-group col-xs-12 col-md-8">
          <%= f.label :電話番号 %>
          <%= f.text_field :telephone_number,class: :"form-control" %>
        </div>
        <div class="form-group col-xs-12 col-md-8">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email,class: :"form-control",placeholder:"sample@sample.jp" %>
        </div>
        <div class="form-group col-xs-12 col-md-8">
          <%= f.submit "編集内容を保存",class:"btn btn-success" %>
          <%= link_to "退会する",customers_withdrawal_path(@customer),class:"btn btn-danger" %></td>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>