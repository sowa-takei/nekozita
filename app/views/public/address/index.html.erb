<div class="container" style="min-height: 500px;">
  <h4 class="font-weight-bolder">配送先登録/一覧</h4>
  <div class="errors">
   <% if @address.errors.any? %>
    <%= @address.errors.count %>件のエラーが発生しました</br>
    <% @address.errors.full_messages.each do |message| %>
     <%= message %><br />
    <% end %>
   <% end %>
  </div>

  <div class="row">
    <div class="col-10">
     <%= form_with model: @address, url:address_index_path,local: true do |f| %>
      <div class="form-row">
        <div class="form-group col-xs-12 col-md-10">
          <%= f.label :郵便番号 %>(ハイフンなし)
          <%= f.text_field :postal_code,class: :"form-control",placeholder:"1234567" %>
        </div>
        <div class="form-group col-xs-12 col-md-10">
          <%= f.label :住所 %>
          <%= f.text_field :address,class: :"form-control",placeholder:"東京都千代田区有楽町２丁目５−１" %>
        </div>
        <div class="form-group col-xs-12 col-md-10">
          <%= f.label :宛名 %>
          <%= f.text_field :name,class: :"form-control",placeholder:"令和太郎" %>
        </div>
        <div class="form-group col-xs-12 col-md-10">
          <%= f.submit "新規登録",class:"btn btn-success" %>
        </div>
      </div>
     <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-12">
      <table class="table table-bordered">
        <% @addresses.each do |address| %>
        <tr class="row">
          <td class="col-md-2 col-xs-12"><%= address.postal_code %></td>
          <td class="col-md-5 col-xs-12"><%= address.address %></td>
          <td class="col-md-3 col-xs-12"><%= address.name %></td>
          <td class="col-md-2 col-xs-12"><%= link_to "編集する",edit_address_path(address),class:"btn btn-success btn-sm" %>
                                         <%= link_to "削除する",address_path(address),method: :delete,class:"btn btn-danger btn-sm" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
