<div class="container">
  <h4>配送先登録/一覧</h4>
  <div class="row">
    <div class="col-8">
    <%= form_with model: @address, url:address_index_path,local: true do |f| %>
    <table class="table table-borderless">
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th>宛名</th>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit "新規登録",class:"btn btn-success" %></td>
      </tr>
    </table>
    <% end %>
    </div>

  </div>
  <div class="row">
    <div class="col-10">
      <table class="table table-bordered">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
        <tr>
          <% @addresses.each do |address| %>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する",edit_address_path(address),class:"btn btn-success btn-sm" %>
          　　<%= link_to "削除する",address_path(address),method: :delete,class:"btn btn-danger btn-sm" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>