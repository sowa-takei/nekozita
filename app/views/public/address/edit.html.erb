<div class="container">
  <div class="row mt-5">
  <div class="col-10">
    <h2>配送先編集</h2>
    <%= form_with model: @address, url:address_path,local: true do |f| %>
    <table class="table table-borderless">
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th>宛名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th></th>
        <td><%= f.submit "変更内容を保存",class:"btn btn-success" %></td>
      </tr>
    </table>
    <% end %>
  </div>
  </div>
</div>